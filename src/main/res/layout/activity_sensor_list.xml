<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".section_01_movesense.sensors.sensors_list.SensorListActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sensorList_deviceInfo_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Connected Device"
            android:textColor="@color/colorGreen"
            android:textSize="16sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/sensorList_deviceInfo_serial_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sensorList_deviceInfo_title_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            tools:text="Serial: 21512521" />

        <TextView
            android:id="@+id/sensorList_deviceInfo_sw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sensorList_deviceInfo_serial_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            tools:text="Sw version: 0.10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/sensorList_deviceInfo_sw_tv"
            android:layout_marginTop="4dp"
            android:background="@android:color/white"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Random"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CURL"
            android:textSize="40dp"
            android:textColor="@color/colorGreen"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Curl"
        android:visibility="invisible" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/sensorList_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
